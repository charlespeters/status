<div class="u-w300">
  <header class="u-p3">
    <div class="o-flex o-flex--center--h o-flex--j--sb small">
      <div class="u-mb2">
        <h3 class="h6 u-w400">
          {{#link-to 'repo' r}}{{ r.name }}{{/link-to}}
        </h3>
        <small class='u-ltgray u-caps u-lt-2'>{{moment-from-now r.updated_at hideSuffix=false}}</small>
      </div>
      <a href="{{ r.html_url }}" class="small">GitHub</a>
    </div>
    <div class="o-flex o-flex--j--sb o-flex--center--h">
      <div class="o-flex o-flex--center--h u-mr1">
        <span class="h6 u-w700 u-mr2 u-lh-1">{{ r.open_issues_count}}</span>
        <span class="small u-my1 u-caps u-lt-2 u-ltgray">Issues</span>
      </div>
      <div class="o-flex o-flex--center--h u-lh-1 u-mr1">
        <span class="h6 u-w700 u-mr2 u-lh-1">{{ r.forks_count }}</span>
        <span class="small u-my1 u-caps u-lt-2 u-ltgray">Forks</span>
      </div>
      <div class="o-flex o-flex--center--h u-lh-1">
        <span class="h6 u-w700 u-mr2 u-lh-1">{{ r.stargazers_count }}</span>
        <span class="small u-my1 u-caps u-lt-2 u-ltgray">Stargazers</span>
      </div>
    </div>
  </header>
  {{#if r.description}}
    <div class="small u-ltgray u-bg--palegray u-p3">
      <p class="u-system u-mb0">
        {{ r.description }}
      </p>
      <small>ID: #{{r.id}}</small>
    </div>
  {{/if}}
</div>
